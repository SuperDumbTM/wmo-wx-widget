<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>

    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        .round-border {
            border: 1px lightgray solid;
            border-radius: 5px;
        }
    </style>
</head>

<body>    
    <div class="container mt-5">
        <div class="d-none d-lg-flex flex-row justify-content-around round-border">
            <% forecasts.forEach(function(wx, index) { %>
                <div class="d-flex flex-column">
                    <div class="d-flex justify-content-center w-auto">
                        <% var _d = new Date(wx.date); %>
                        <span class="text-muted me-1">
                            <%= _d.toLocaleString('en', {weekday:'long'}).substring(0, 3).toUpperCase()%>
                        </span>
                        <span>
                            <%= _d.getDate() %>
                        </span>
                    </div>
                    <div class="d-flex justify-content-center align-items-center" style="height: 68px;">
                        <img class="card-img-top rounded m-auto" src="<%= wx.icon %>" style="width: 4rem;">
                    </div>
                    <div class="d-flex justify-content-center align-items-center">
                        <span class="text-primary mx-1">
                            <% if (forecasts.length < 7) { %>
                                <i class="bi bi-thermometer-high"></i>
                            <% } %>

                            <%= `${wx.temp.min}째${wx.temp.unit}` %>
                        </span>
                        <span class="text-danger mx-1">
                            <% if (forecasts.length < 7) { %>
                                <i class="bi bi-thermometer-low"></i>
                            <% } %>
                            
                            <%= `${wx.temp.max}째${wx.temp.unit}` %>
                        </span>
                    </div>
                </div>
            <% }) %>
        </div>

        <div class="d-flex d-lg-none flex-column flex-nowrap">
            <% forecasts.forEach(function(wx, index) { %>
                <div class="d-flex flex-row my-1 round-border">
                    <div class="d-flex flex-column flex-grow-1 justify-content-center align-items-center">
                        <% var _d = new Date(wx.date); %>
                        <span class="text-muted" style="font-size: 0.57rem;">
                            <%= _d.toLocaleString('en', {weekday:'long'}).substring(0, 3).toUpperCase()%>
                        </span>
                        <span>
                            <%= _d.getDate() %>
                        </span>
                    </div>
                    <div class="d-flex justify-content-center align-items-center" style="min-width: 30%;">
                        <img src="<%= wx.icon %>" style="width: 50px;">
                    </div>
                    <div class="d-flex justify-content-center align-items-center flex-fill">
                        <span class="text-primary">
                            <i class="bi bi-thermometer-high"></i>
                            <%= `${wx.temp.min}째${wx.temp.unit}` %>
                        </span>
                        <span class="text-danger">
                            <i class="bi bi-thermometer-low"></i>
                            <%= `${wx.temp.max}째${wx.temp.unit}` %>
                        </span>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>